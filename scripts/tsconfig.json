{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist/scripts",
    "sourceMap": true,
    "declaration": false,
    "allowJs": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
} 