{
  "name": "sim-dash",
  "version": "1.0.0",
  "description": "Electron app template for connecting to SQL Server with profile management.",
  "main": "src/main-entry.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite --port 5173",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.node.json --noEmitOnError false",
    "build": "npm run build:electron && npm run build:renderer",
    "preview": "vite preview src/renderer",
    "electron:dev": "npm run build:electron && cross-env NODE_ENV=development electron .",
    "test": "playwright test",
    "test:e2e": "npm run build:renderer && npm run test",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "prestart": "npm run build:electron"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@swc/core": "^1.11.24",
    "@swc/register": "^0.1.10",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.4.1",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "playwright": "^1.52.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.4"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "@mui/x-date-pickers": "^8.2.0",
    "@reduxjs/toolkit": "^2.7.0",
    "@tanstack/react-table": "^8.21.3",
    "dayjs": "^1.11.13",
    "mssql": "^11.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.5.3",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.scapeshift.simdash",
    "productName": "SimDash",
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "src/build-info.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "extendInfo": {
        "CFBundleName": "SimDash",
        "CFBundleDisplayName": "SimDash"
      }
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
